.main
	%header
		= render "header"
	.body
		.body__rooms
			.body__left
				.request__form{style: "overflow:scroll;"}
					.request__title What spaces can guests use?
					.request__content
						%div.form__list
							= form_for @room, url: wizard_path do |f|
								= collection_check_boxes(:room, :space_ids, Space.all, :id, :item) do |b|
									.check_box__wrapper
										%label.check_box
											.field.check{style: "margin-top:5px; float:left;"}
												%div{style: "padding-left:8px; float:left;"}
												= b.label {b.check_box + b.text}
									.request__bottom.form_list.form_position
										.back
											=link_to "‚Üê Back",previous_wizard_path
										%div
											=f.submit "Finish", class: "next";
			.body__right