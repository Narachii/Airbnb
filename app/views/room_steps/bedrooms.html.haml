.main
	%header
		= render "header"
	.body
		.body__rooms
			.body__left
				.request__form
					.request__title How many guests can your place accommodate?
					.request__content
						.content__wrapper
							.content__guest
								Guests
							.button__wrapper
								%button.counter#plus
									%span.counter__text +
							.counter__count#counter
								0
							.button__wrapper{style: "float:center;"}
								%button.counter#minus
									%span.counter__text{style: "font-size: 25px; line-height:15px; font-weight:100;"} -
					= form_for @room, url: wizard_path  do |f|
						%div.form__list{style: "margin:32px 0; clear:both;"}
							%span
							How many bedrooms can guests use?
							.s-wrapper
								= f.select :bedroom, options_for_select({Select_one: "",
									Studio: "0",
									bedroom: "1",
									Two_bedrooms: "2",
									Three_bedrooms: "3",
									Four_bedrooms: "4",
									Five_bedrooms: "5",
									Six_bedrooms: "6",
									Seven_bedrooms: "7",
									Eight_bedrooms: "8",
									Nine_bedrooms: "9",
									Ten_bedrooms: "10" },disabled: "")
						.content__wrapper
							.form__list How many beds can guest use?
							.content__guest
								Beds
							%f.label.button__wrapper
								.counter#plus-bed
									%span.counter__text +
							.counter__count#counter-bed
								0
							.button__wrapper{style: "float:center;"}
								.counter#minus-bed
									%span.counter__text{style: "font-size: 25px; line-height:15px; font-weight:200;"} -
						.request__bottom.form_list
							.back
								=link_to "‚Üê Back",previous_wizard_path
							%div
								=f.hidden_field :guest_number, value: 0, id: "hidden"
								=f.hidden_field :bed, value: 0, id: "hidden-bed"
								=f.submit "Next",class: "next"
			.body__right