.main
	%header
		= render "header2"
	.body
		.body__rooms
			.body__left
				.request__form{style: "overflow:scroll;"}
					.request__title Name your place
					.request__content
						%div.form__list
						= form_for @room, url: wizard_path do |f|
							.field{style: "float: left; margin-top:5px;"}
								= f.text_field :name,placeholder:"Listing title", class: "form__title"
							.request__bottom.form_list.form_position
								.back
									=link_to "‚Üê Back",previous_wizard_path
								%div
									=f.submit "Next",class: "next_form"
			.body__right
