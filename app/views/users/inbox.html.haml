.main
	%header
		= render "hosts/header"
		= render "menu-bar"
	.body{style: "overflow: auto; clear:both;" }
		.content__menu
			-if current_user.image
				= link_to messages_path,method: :get do
					%span To messages
			-else
				= link_to media_users_path,method: :get do
					%span To messages
	.body__bottom{style: "margin-top:24px;"}
	.content
		.content__main
			%footer
				= render "users/footer"
